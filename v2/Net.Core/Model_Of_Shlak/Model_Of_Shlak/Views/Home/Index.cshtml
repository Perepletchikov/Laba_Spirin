@{
    ViewData["Title"] = "Home Page";
}

<form method="post" action="/Home/Result/" class="form-horizontal" style="margin-top: 30px">
    <div class="form-group">
        <label class="col-xs-2">Температура на входе в зону когезии, град.С</label>
        <div class="col-xs-4">
            <input type="text" name="TempVhod" value="@ViewBag.rashet.TempVhod" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2">FeO в шлаке при входе в зону когезии, %</label>
        <div class="col-xs-4">
            <input type="text" name="FeOVhod" value="@(ViewBag.rashet.FeOVhod)" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2">Температура на выходе из зоны когезии, град.С</label>
        <div class="col-xs-4">
            <input type="text" name="TempExit" value="@(ViewBag.rashet.TempExit)" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-2">FeO в шлаке при выходе из зоны когезии, %</label>
        <div class="col-xs-4">
            <input type="text" name="FeOExit" value="@(ViewBag.rashet.FeOExit)" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-xs-2">Основность первичного шлака, доли ед.</label>
        <div class="col-xs-4">
            <input type="text" name="Osnovnoct" value="@(ViewBag.rashet.Osnovnoct)" class="form-control" />
        </div>
    </div>


    

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Посчитать</button>
    </div>

</form>

